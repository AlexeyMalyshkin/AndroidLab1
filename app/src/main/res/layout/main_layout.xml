<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colors_button"
            android:id="@+id/colors_button" android:layout_centerHorizontal="true"
            android:onClick="goToColorsActivity"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calc_button" android:layout_below="@+id/colors_button" android:layout_centerHorizontal="true"
            android:text="@string/calc_button" android:onClick="goToCalcActivity"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/notes_button"
            android:id="@+id/notes_button" android:layout_below="@+id/calc_button" android:layout_centerHorizontal="true"
            android:onClick="goToNotesActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DefaultTheme"
        android:id="@+id/defaultTheme"
        android:layout_below="@+id/notes_button"
        android:layout_alignLeft="@+id/calc_button"
        android:layout_alignStart="@+id/calc_button"
        android:textSize="?attr/font_large"
        android:onClick="onThemeButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="?attr/font_large"
        android:text="CustomTheme"
        android:id="@+id/CustomTheme"
        android:onClick="onThemeButtonClick"
        android:layout_below="@+id/defaultTheme"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="smallFont"
        android:id="@+id/smallFont"
        android:layout_below="@+id/CustomTheme"
        android:layout_centerHorizontal="true"
        android:onClick="onFontSizeButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="middleFont"
        android:id="@+id/middleFont"
        android:layout_below="@+id/smallFont"
        android:layout_alignLeft="@+id/CustomTheme"
        android:layout_alignStart="@+id/CustomTheme"
        android:onClick="onFontSizeButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LargeFont"
        android:id="@+id/largeFont"
        android:layout_below="@+id/middleFont"
        android:layout_alignLeft="@+id/notes_button"
        android:layout_alignStart="@+id/notes_button"
        android:onClick="onFontSizeButtonClick" />

</RelativeLayout>
